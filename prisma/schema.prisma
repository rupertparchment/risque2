// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  dateOfBirth   DateTime?
  membershipStatus String @default("pending") // pending, active, expired, cancelled
  membershipStart DateTime?
  membershipEnd   DateTime?
  stripeCustomerId String?
  isDeleted     Boolean   @default(false) // Soft delete flag
  deletedAt     DateTime? // When the member was deleted
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  payments      Payment[]
  rsvps         RSVP[]
}

model Event {
  id            String    @id @default(cuid())
  title         String
  description   String
  eventDate     DateTime
  eventTime     String
  eventType     String    // regular, themed, special
  theme         String?   // for themed events
  flyerImage    String?   // URL to flyer image
  interiorImage String?   // URL to interior photo
  capacity      Int       @default(150)
  price         Float     @default(100.00) // per couple
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  payments      Payment[]
  rsvps         RSVP[]
}

model Payment {
  id              String    @id @default(cuid())
  userId          String
  amount          Float
  currency        String    @default("usd")
  status          String    // pending, completed, failed, refunded
  stripePaymentId String?
  paymentType     String    // membership, event
  eventId         String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id])
  event           Event?    @relation(fields: [eventId], references: [id])
}

model RSVP {
  id            String    @id @default(cuid())
  userId        String
  eventId       String
  status        String    @default("confirmed") // confirmed, cancelled, waitlist
  guests        Int       @default(2) // number of people (couple = 2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id])
  event         Event     @relation(fields: [eventId], references: [id])
  
  @@unique([userId, eventId])
}

model GalleryImage {
  id            String    @id @default(cuid())
  title         String
  description   String?
  imageUrl      String
  category      String    @default("interior") // interior, facility, etc.
  isActive      Boolean   @default(true)
  displayOrder  Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
